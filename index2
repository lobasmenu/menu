    /* glass footer on posters */
    .catalog-footer { position: absolute; left: 0; right: 0; bottom: 0; padding: 1.25rem; background: rgba(255,255,255,0.36); backdrop-filter: blur(12px) saturate(115%); -webkit-backdrop-filter: blur(12px) saturate(115%); transition: background .28s ease, backdrop-filter .28s ease, transform .28s ease; }
