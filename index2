    .catalog-card:hover { transform: translateY(-6px); box-shadow: 0 18px 40px rgba(2,6,23,0.16); }
    .catalog-card img { width: 100%; height: 100%; object-fit: cover; display: block; transition: transform .32s ease, filter .32s ease; }
