    #sheet { position: fixed; left: 0; right: 0; bottom: 0; z-index: 50; max-height: 88vh; transform: translateY(100%); transition: transform .35s cubic-bezier(.2,.9,.2,1); border-top-left-radius: 20px; border-top-right-radius: 20px; overflow: hidden; }
    #sheet.visible { transform: translateY(0%); }
    .sheet-inner { background: rgba(255,255,255,0.48); backdrop-filter: blur(18px) saturate(120%); -webkit-backdrop-filter: blur(18px) saturate(120%); padding: 1rem 1.25rem; height: 100%; }

    /* Horizontal drinks row */
    .drinks-row { display:flex; gap:1rem; overflow-x:auto; padding:1rem 0.5rem; scroll-snap-type:x mandatory; -webkit-overflow-scrolling:touch; }
    .drinks-row::-webkit-scrollbar{ display:none; }

    .drink-card { flex:0 0 18rem; width:18rem; border-radius:14px; overflow:hidden; box-shadow:0 10px 30px rgba(2,6,23,0.12); background: rgba(255,255,255,0.55); backdrop-filter: blur(22px) saturate(140%); -webkit-backdrop-filter: blur(22px) saturate(140%); scroll-snap-align:center; }
    .drink-card img{ width:100%; height:11.5rem; object-fit:cover; display:block; }
    .drink-meta{ padding:0.75rem; }

    .btn-round{ height:44px; width:44px; display:flex; align-items:center; justify-content:center; border-radius:999px; background:rgba(255,255,255,0.45); backdrop-filter:blur(10px); border:1px solid rgba(255,255,255,0.4); }

    /* small helpers */
    .hidden { display:none; }
